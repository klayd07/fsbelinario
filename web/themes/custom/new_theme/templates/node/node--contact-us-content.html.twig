<div class="w-full bg-white py-12 px-4 md:px-16">
  <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-12">

    <!-- Left Side: Contact Info and Map -->
    <div class="space-y-8">

      <!-- Contact Info Centered -->
      <div class="flex flex-col items-center space-y-6">

        <!-- Email -->
        <div class="flex items-start space-x-4 w-full min-h-[100px]">
          {% if content.field_email_logo[0] is not empty %}
            {% set image_uri = content.field_email_logo[0]['#item'].entity.uri.value %}
            <img src="{{ file_url(image_uri) }}" alt="Email Icon" class="w-12 h-12">
          {% endif %}
          <div class="w-full">
            <h3 class="font-bold text-lg">Email</h3>
            <p class="text-sm">{{ content.field_email }}</p>
          </div>
        </div>

        <!-- Call Us -->
        <div class="flex items-start space-x-4 w-full min-h-[100px]">
          {% if content.field_phone_logo[0] is not empty %}
            {% set image_uri = content.field_phone_logo[0]['#item'].entity.uri.value %}
            <img src="{{ file_url(image_uri) }}" alt="Phone Icon" class="w-12 h-12">
          {% endif %}
          <div class="w-full">
            <h3 class="font-bold text-lg">Call Us</h3>
            <p class="text-sm">{{ content.field_phone }}</p>
          </div>
        </div>

        <!-- Career -->
        <div class="flex items-start space-x-4 w-full min-h-[100px]">
          {% if content.field_career_logo[0] is not empty %}
            {% set image_uri = content.field_career_logo[0]['#item'].entity.uri.value %}
            <img src="{{ file_url(image_uri) }}" alt="Career Icon" class="w-12 h-12">
          {% endif %}
          <div class="w-full">
            <h3 class="font-bold text-lg">Career</h3>
            <p class="text-sm">{{ content.field_career }}</p>
          </div>
        </div>

      </div>

      <!-- Map -->
      <div>
        <h3 class="font-bold text-lg text-purple-700 mb-2 text-center">Our Location</h3>
        {% if content.field_gmap['#items'].0.value is defined and content.field_gmap['#items'].0.value is not empty %}
          <iframe src="{{ content.field_gmap['#items'].0.value | trim }}" 
                  width="100%"
                  height="300"
                  style="border:0;"
                  allowfullscreen=""
                  loading="lazy"
                  referrerpolicy="no-referrer-when-downgrade"
                  class="rounded-lg shadow-md">
          </iframe>
        {% else %}
          <p class="text-center text-gray-500">No map available.</p>
        {% endif %}
      </div>

    </div>

    <!-- Right Side: Contact Form -->
    <div class="space-y-6">
        <div class="custom-webform">
        {{ contact_us_form }}
        </div>
    </div>


  </div>
</div>
