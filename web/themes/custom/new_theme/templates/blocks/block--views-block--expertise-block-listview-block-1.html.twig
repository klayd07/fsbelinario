<div class="flex flex-col items-center bg-white py-12 px-6">

    <!-- Grid for the first 6 cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-6 w-full max-w-7xl">
  {% for row in content['#view'].result %}
           <!-- Card 1 -->
      <div class="bg-purple-700 text-white p-6 rounded-2xl shadow-md min-h-[220px]">
        <h3 class="text-xl font-bold mb-2 text-white">{{ row._entity.get('info').value }}</h3>
        <p class="text-base leading-relaxed">
          {{ row._entity.get('body').value|raw }}
        </p>
      </div>
         {% endfor %}
    </div>
  </div>