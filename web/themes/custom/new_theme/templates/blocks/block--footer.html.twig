<section id="" class="footer-section bg-[#4F2D7F] text-white py-10 px-6 md:px-10 lg:px-20s">
    <div class="max-w-screen-xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">

            <!-- About Company -->
            <div>
                <h3 class="text-lg font-bold mb-3">
                    About Company
                    <span class="border-t-2 border-white w-10 inline-block align-middle ml-2"></span>
                </h3>
                <p class="text-sm text-justify leading-relaxed">
                    {{ content.field_about_company|render }}
                </p>
                <h4 class="font-bold mt-6">
                    Affiliates
                    <span class="border-t-2 border-white w-10 inline-block align-middle ml-2"></span>
                </h4>
                <ul class="text-sm mt-3 space-y-1">
                    {% for item in content.field_affiliates['#items'] %}
                        <li class="flex items-center">
                            <i class="fas fa-chevron-circle-right mr-2"></i>
                            {{ item.value|raw }}
                        </li>
                    {% endfor %}
                </ul>
            </div>

            <!-- Services -->
            <div>
                <h3 class="text-lg font-bold mb-3">
                    Services
                    <span class="border-t-2 border-white w-10 inline-block align-middle ml-2"></span>
                </h3>
                <ul class="text-sm space-y-2">
                    {% for service in content.field_services['#items'] %}
                        <li class="flex items-center">
                            <i class="fas fa-chevron-circle-right mr-2"></i>
                            {{ service.value|raw }}
                        </li>
                    {% endfor %}
                </ul>
            </div>

            <!-- Headquarters -->
            <div>
                <h3 class="text-lg font-bold mb-3">
                    Head Quarters
                    <span class="border-t-2 border-white w-10 inline-block align-middle ml-2"></span>
                </h3>
                <ul class="text-sm space-y-3">
                    <li class="flex items-center">
                        <i class="fas fa-map-marker-alt mr-2"></i> {{ content.field_address|render }}
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-clock mr-2"></i> {{ content.field_time|render }}
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-phone mr-2"></i> {{ content.field_phone_number|render }}
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-phone mr-2"></i> {{ content.field_telephone|render }}
                    </li>
                    {% for email in content.field_email['#items'] %}
                        <li class="flex items-center">
                            <i class="fas fa-envelope-open mr-2"></i>
                            {{ email.value|raw }}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <!-- Footer Bottom -->
        <div class="text-center text-xs mt-10 pt-5 border-t border-white">
            Â© {{ "now"|date("Y") }} FELOMINO S. BELINARIO & ASSOCIATES. All Rights Reserved. <br class="block md:hidden">
            Designed and Maintained by ORTADEL TECHNOLOGIES CORPORATION
        </div>
    </div>
</section>
