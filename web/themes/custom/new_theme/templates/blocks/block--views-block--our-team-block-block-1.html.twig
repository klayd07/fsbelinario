<section class="bg-white py-12">
        <div class="max-w-7xl mx-auto px-6">
            {% set row = content['#view'].result|first %}
{% if row %}
          <!-- Section Title -->
          <div class="pl-1 mb-2">
            <h2 class="text-3xl text-left font-bold text-purple-800">Our Team</h2>
          </div>
          
          <div class="mt-2 pl-1 px-10">
            <hr class="border-t-4 border-purple-800">
          </div>
    
          <!-- Section Description -->
          <p class="text-left pt-5 text-gray-600 mb-10 text-xl md:text-base leading-relaxed">
             {{ row._entity.get('body').value|raw }}
          </p>
       {% endif %}
      
          <!-- Team Grid -->
          <div class="grid grid-cols-1 pt-10 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
             {% for row in content['#view'].result %}
            <!-- Team Member -->
            <div class="text-center">
        {% if row._entity.get('field_images_profile').entity.uri.value is not empty %}
              <img src="{{ file_url(row._entity.get('field_images_profile').entity.uri.value) }}" alt="Dr Felomino Belinario" class="w-full h-60 object-cover rounded-lg shadow-md mb-4">
       {% endif %}
             
             <h3 class="font-bold text-purple-800"> {{ row._entity.get('field_name').value|raw }}</h3>
              <p class="text-sm  font-bold text-gray-600"> {{ row._entity.get('field_position').value|raw }}</p>
            </div>
        {% endfor %}
          </div>
        </div>
      </section>